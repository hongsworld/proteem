      });
    $("#preload").click(function(){
    $("#preload").css("z-index","0")

      });
    var lists = new Array();
        var jumbo = $("#jumbotron2").css("width") ;
        jumbo = parseFloat(jumbo.substr(0,jumbo.length-2));
  for (var i=1;i<7; i++){
          lists[$("#list"+i).attr('id')] = i
                    $("#list" + i ).mouseover(function() {
                      $(this).attr('src',"/images/"  + lists[$(this).attr('id')] + "dong2.png");
                        });
                    $("#list" + i ).mouseout(function() {
                      $(this).attr('src',"/images/"  + lists[$(this).attr('id')] + "dong.png");
                      });

          $("#list"+i).load(function() { 
                    each_width = $("#list" +i).css("width").substr(0,$("#list" +i).css("width").length -2)
          });
                    each_top = $("#list" +i).css("top").substr(0,$("#list" +i).css("top").length -2)
                    each_left = $("#list" +i).css("left").substr(0,$("#list" +i).css("left").length -2)
                    $("#list" + i).css("width", parseFloat(each_width) *  jumbo/486 );
                    $("#list" + i).css("left", parseFloat(each_left) * jumbo/486 );
                    $("#list" + i).css("top", parseFloat(each_top) * jumbo/486 );
    }
    left = $("#list5").css("left")
    $("#map").css("margin","0 0 0 calc(-" + left + " - 20px)")
});
